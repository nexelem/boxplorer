<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/box_qr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/generate_qr_code"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/box_add_generated_qr"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/generate_qr_code"
            android:src="@drawable/qr_example" />

        <TextView
            android:id="@+id/box_qr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/qr_description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/header" />

    </LinearLayout>

    <Button
        android:id="@+id/share_qr"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/next_button"
        android:text="@string/send_qr_code"
        android:textColor="@android:color/white" />

</LinearLayout>